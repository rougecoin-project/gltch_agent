# GLTCH Configuration
# Copy to .env and fill in your values

# ═══════════════════════════════════════════════════════════
# LLM Settings
# ═══════════════════════════════════════════════════════════

# Local Ollama
GLTCH_LOCAL_URL=http://localhost:11434/api/chat
GLTCH_LOCAL_MODEL=phi3:3.8b
GLTCH_LOCAL_CTX=4096

# Remote LM Studio / OpenAI-compatible
GLTCH_REMOTE_URL=http://192.168.1.188:1234/v1/chat/completions
GLTCH_REMOTE_MODEL=deepseek-r1-distill-qwen-14b
GLTCH_REMOTE_CTX=8192

# OpenAI Cloud (optional)
OPENAI_API_KEY=
GLTCH_OPENAI_MODEL=gpt-4o

# OpenCode Integration
OPENCODE_ENABLED=true
OPENCODE_URL=http://localhost:4096
OPENCODE_SERVER_PASSWORD=

# Request timeout (seconds)
GLTCH_TIMEOUT=120

# ═══════════════════════════════════════════════════════════
# Gateway Settings
# ═══════════════════════════════════════════════════════════

GLTCH_GATEWAY_HOST=127.0.0.1
GLTCH_GATEWAY_PORT=18888
GLTCH_GATEWAY_WS_PORT=18889

# ═══════════════════════════════════════════════════════════
# Channel Tokens
# ═══════════════════════════════════════════════════════════

# Discord Bot
DISCORD_BOT_TOKEN=

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# ═══════════════════════════════════════════════════════════
# Fun Stuff
# ═══════════════════════════════════════════════════════════

# Giphy API Key (for GIF support)
# Get one at: https://developers.giphy.com/dashboard/
GIPHY_API_KEY=

# ═══════════════════════════════════════════════════════════
# Data Directories (optional)
# ═══════════════════════════════════════════════════════════

# GLTCH_DATA_DIR=~/.gltch
